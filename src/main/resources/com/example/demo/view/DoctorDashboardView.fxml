<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.org/fxml"
            fx:controller="com.example.demo.controller.DoctorDashboardController"
            styleClass="modern-container"
            stylesheets="@../css/modern-theme.css">
    
    <!-- Top Bar with application logo, search, user info -->
   <top>
        <HBox styleClass="top-bar">
            <!-- Logo and title -->
            <HBox styleClass="logo-container" alignment="CENTER_LEFT" spacing="10">
                <ImageView fx:id="logoImage" fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true"/>
                <Label text="SahaCare Doctor" styleClass="app-title"/>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- User Information -->
            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Button fx:id="notificationsButton" styleClass="icon-button">
                    <graphic>
                        <StackPane>
                            <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true" />
                            <Circle fx:id="notificationBadge" radius="5" fill="#ff4757" visible="false" 
                                   translateX="6" translateY="-6"/>
                        </StackPane>
                    </graphic>
                </Button>
                
                <Separator orientation="VERTICAL" />
                
                <HBox alignment="CENTER" spacing="10" styleClass="user-info">
                    <StackPane styleClass="user-avatar">
                        <Label fx:id="userInitials" text="DR" />
                    </StackPane>
                    
                    <VBox>
                        <Label fx:id="userNameLabel" text="Dr. Smith" styleClass="user-name"/>
                        <Label fx:id="userRoleLabel" text="Doctor" styleClass="user-role"/>
                    </VBox>
                    
                    <MenuButton styleClass="user-menu-button">
                        <items>
                            <MenuItem text="My Profile" onAction="#handleViewProfile"/>
                            <MenuItem text="Account Settings" onAction="#handleSettings"/>
                            <SeparatorMenuItem />
                            <MenuItem text="Logout" onAction="#handleLogout"/>
                        </items>
                    </MenuButton>
                </HBox>
            </HBox>
      </HBox>
   </top>
    
    <!-- Left Sidebar Navigation -->
    <left>
        <VBox styleClass="sidebar">
            <!-- Main Navigation -->
            <ListView fx:id="navigationList" styleClass="navigation-list" VBox.vgrow="ALWAYS" />
            
            <!-- Bottom sidebar section with help/support -->
            <VBox styleClass="sidebar-footer">
                <Button fx:id="helpButton" text="Help &amp; Support" styleClass="help-button" 
                        onAction="#handleHelpSupport"/>
            </VBox>
        </VBox>
    </left>
    
    <!-- Main Content Area -->
   <center>
        <StackPane>
            <!-- Initial Doctor Dashboard Content -->
            <StackPane fx:id="contentArea" styleClass="content-area">
                <ScrollPane fitToWidth="true">
                    <VBox spacing="20">
                        <Label text="Doctor Dashboard" styleClass="section-title"/>
                        <Label text="Welcome back, Dr. Smith" styleClass="section-subtitle" fx:id="welcomeLabel"/>
                        
                        <!-- Stats Cards Row -->
                        <HBox spacing="20">
                            <VBox styleClass="dashboard-card, primary, animated-hover" HBox.hgrow="ALWAYS">
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <StackPane styleClass="card-icon">
                                        <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true"/>
                                    </StackPane>
                                    <VBox>
                                        <Label text="Today's Appointments" styleClass="card-title"/>
                                        <Label fx:id="todayAppointmentsLabel" text="8" styleClass="card-value"/>
                                    </VBox>
                                </HBox>
                            </VBox>
                            
                            <VBox styleClass="dashboard-card, success, animated-hover" HBox.hgrow="ALWAYS">
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <StackPane styleClass="card-icon">
                                        <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true"/>
                                    </StackPane>
                                    <VBox>
                                        <Label text="Patients Seen Today" styleClass="card-title"/>
                                        <Label fx:id="patientsTodayLabel" text="5" styleClass="card-value"/>
                                    </VBox>
                                </HBox>
                            </VBox>
                            
                            <VBox styleClass="dashboard-card, warning, animated-hover" HBox.hgrow="ALWAYS">
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <StackPane styleClass="card-icon">
                                        <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true"/>
                                    </StackPane>
                                    <VBox>
                                        <Label text="Pending Results" styleClass="card-title"/>
                                        <Label fx:id="pendingResultsLabel" text="3" styleClass="card-value"/>
                                    </VBox>
                                </HBox>
                            </VBox>
                        </HBox>
                        
                        <!-- Today's Schedule Section -->
                        <Label text="Today's Schedule" styleClass="section-title"/>
                        <HBox spacing="15">
                            <Button text="Add Appointment" styleClass="action-button" onAction="#handleAddAppointment"/>
                            <Button text="View Full Schedule" styleClass="action-button" onAction="#handleViewSchedule"/>
                        </HBox>
                        
                        <TableView fx:id="appointmentsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="appointmentTimeColumn" text="Time" prefWidth="100"/>
                                <TableColumn fx:id="appointmentPatientColumn" text="Patient" prefWidth="200"/>
                                <TableColumn fx:id="appointmentPurposeColumn" text="Purpose" prefWidth="200"/>
                                <TableColumn fx:id="appointmentStatusColumn" text="Status" prefWidth="100"/>
                                <TableColumn fx:id="appointmentActionsColumn" text="Actions" prefWidth="150"/>
                            </columns>
                        </TableView>
                        
                        <!-- Patient Metrics and Charts -->
                        <GridPane hgap="20" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>
                            
                            <!-- Patient Demographics Chart -->
                            <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="dashboard-card">
                                <Label text="Patient Demographics" styleClass="card-title"/>
                                <PieChart fx:id="demographicsChart" title="" legendVisible="true" 
                                         labelsVisible="true" prefHeight="250"/>
                            </VBox>
                            
                            <!-- Activity Timeline -->
                            <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="dashboard-card">
                                <Label text="Patient Visits (Monthly)" styleClass="card-title"/>
                                <LineChart fx:id="visitsChart" title="" legendVisible="false" 
                                          prefHeight="250">
                                    <xAxis>
                                        <CategoryAxis side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis side="LEFT" />
                                    </yAxis>
                                </LineChart>
                            </VBox>
                        </GridPane>
                        
                        <!-- Recent Patient Notes -->
                        <Label text="Recent Patient Notes" styleClass="section-title"/>
                        <TableView fx:id="recentNotesTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="noteTimeColumn" text="Date" prefWidth="100"/>
                                <TableColumn fx:id="notePatientColumn" text="Patient" prefWidth="200"/>
                                <TableColumn fx:id="noteSummaryColumn" text="Summary" prefWidth="400"/>
                            </columns>
                        </TableView>
                    </VBox>
                </ScrollPane>
            </StackPane>
            
            <!-- Loading overlay -->
            <StackPane fx:id="loadingOverlay" styleClass="loading-overlay" visible="false" managed="false">
                <VBox alignment="CENTER" spacing="20">
                    <ProgressIndicator />
                    <Label text="Loading..." styleClass="loading-text"/>
      </VBox>
            </StackPane>
        </StackPane>
   </center>
</BorderPane> 